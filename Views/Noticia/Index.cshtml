@model Noticias
    @{
        ViewData["Title"] = "Noticias";
    }

   <form action="@Url.Action("Cadastrar")"  method="POST" enctype="multipart/form-data">
    <label>ID</label>
    <input type="text" name="IdNoticia" />

    <label>Titulo</label>
    <input type="text" name="Titulo" />
    
    <label>Texto</label>
    <input type="text" name="Texto" />

    <label>Imagem</label>
    <input type="file" name="Imagem" />

    <button type="submit">Cadastrar</button>
</form>

<table class="table table-striped table-responsive">
    <thead>
        <th>ID</th>
        <th>Titulo</th>
        <th>Texto</th>
        <th>Foto</th>
    </thead>
    <tbody>
        @foreach(Noticias n in ViewBag.Noticias){
            <tr>
                <td>@n.IdNoticia</td>
                <td>@n.Titulo</td>
                <td>@n.Texto</td>
                <td><img src="img/Noticia/@n.Imagem" alt="Imagem da noticia @n.Titulo" width="40"></td>
                <td><a asp-area="" asp-controller="Noticia" asp-action="Excluir" asp-route-id="@n.IdNoticia">Excluir</a></td>
            </tr>
        }
    </tbody>
</table>